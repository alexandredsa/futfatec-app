<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRanking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cdvJogador"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtPosicao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1º"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNome"
                        android:layout_width="140sp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Lucas Thomé Alvarez"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/txtNome"
                        android:layout_below="@+id/txtNome"
                        android:layout_gravity="center_horizontal"
                        android:text="(Barcelona)"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtSeparador"
                    android:layout_width="16sp"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:gravity="center_horizontal"
                    android:layout_marginRight="12sp"
                    android:layout_marginLeft="12sp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtGols"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:text="12 gols"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorGolArtilharia"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
